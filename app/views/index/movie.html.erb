<article>
	<section role="movie-info">
		<img src="<%= @movie.posters.detailed%>"/>
		<h1><%= @movie.name %> <small>(<%= @movie.year %>)</small></h1>
		<ul id="release-info">
			<li><strong>Released:</strong> <%= @movie.release_dates['theater'] %></li>
			<li><strong>Rating:</strong> <%= @movie.mpaa_rating %></li>
			<li><strong>Runtime:</strong> <%= @movie.runtime %> minutes</li>
		</ul>

		<h2>Overview</h2>
		<p><%= @movie.synopsis %></p>

		<h2>Sentiment</h2>
	</section>
</article>